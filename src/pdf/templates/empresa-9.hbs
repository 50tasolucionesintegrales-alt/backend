<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{
      --ink:#0f332d;
      --line:#bfc7d1;
      --thead:#195a60;
      --theadText:#ffffff;
      --muted:#174940;
    }

    @page { size: Letter; margin: 0; }

    @font-face{
      font-family: "TahomaLocal";
      src: url("assets/fonts/tahoma.ttf") format("truetype");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }

    body{
      font-family: "TahomaLocal", Arial, Helvetica, sans-serif;
      font-size: 12px;
      color: var(--ink);
    }

    .bg-page{ position:fixed; inset:0; z-index:-1; pointer-events:none; }
    .bg-page img{ width:100%; height:100%; object-fit:cover; display:block; }

    .header-space{ height: 30mm; }

    .top-meta{
      margin: 6mm 18mm 10mm 18mm;
      display: grid;
      grid-template-columns: 1fr auto;
      align-items: start;
      row-gap: 4px;
      color:#243b3b;
    }
    .top-meta .fecha{
      grid-column: 1 / -1;
      text-align: right;
      font-weight: 700;
      margin-bottom: 6px;
    }
    .top-meta .cotizacion{
      justify-self: end;
      font-weight: 700;
    }

    .intro-mini{ margin: 0 18mm 8px 18mm; line-height:1.45; }
    .intro-txt{ margin: 6px 18mm 10mm 18mm; line-height:1.55; color:#222; }

    .table-wrap{ margin: 6px 12mm 0 18mm; }
    table{ width:100%; border-collapse: collapse; table-layout: fixed; background: #fff; }
    thead th{
      background: var(--thead);
      color: var(--theadText);
      border: 1px solid var(--thead);
      font-weight: 700;
      padding: 8px;
      font-size: 12px;
      line-height: 1.2;
      text-align: left;
      vertical-align: middle;
    }
    tbody td{
      border: 1px solid var(--line);
      padding: 6px 8px;
      font-size: 12px;
      line-height: 1.35;
      vertical-align: top;
      background: #fff;
    }
    .center{ text-align:center; }
    .right { text-align:right; }

    .col-part{ width: 18mm; }
    .col-cant{ width: 20mm; }
    .col-unid{ width: 22mm; }
    .col-pu  { width: 28mm; }
    .col-sub { width: 30mm; }

    .totals-wrap{ margin: 6px 12mm 0 18mm; }
    .totals{
      margin-left: auto;
      width: 70mm;
      border-collapse: collapse;
      font-size: 12px;
    }
    .totals td{
      padding: 6px 8px;
      border: 1px solid var(--line);
      background:#fff;
    }
    .totals .label{ font-weight:700; }
    .totals .value{ text-align:right; }

    .enletra{ margin: 10px 18mm 10px 18mm; font-weight: 700; }

    .bottom-row{
      margin: 14px 18mm 0 18mm;
      display: grid;
      grid-template-columns: 1fr 34%;
      gap: 18mm;
      align-items: start;
    }

    .terms .title{ font-weight: 700; margin-bottom: 6px; }
    .terms .content{ line-height:1.55; color:#222; }

    .firma-box{
      min-height: 42mm;
      padding: 10px 12px;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      align-items: flex-start;
      font-weight:700;
      margin-bottom: 8px;
    }
    .firma-box img{ height: 48px; display: inline-block; margin: 2px 0 6px; }

    thead { display: table-header-group; }
    tr, td, th { page-break-inside: avoid; break-inside: avoid; }
    .pb-before{ page-break-before: always; break-before: page; }
  </style>
</head>
<body>

<div class="bg-page"><img src="assets/emp9.png" alt="membrete"></div>
<div class="header-space"></div>

<div class="top-meta">
  <div class="fecha">{{lugar}} a {{fecha}}</div>
  <div class="cotizacion">Cotización: {{folio}}</div>
</div>

<div class="intro-mini">
  <div style="font-weight:700;">GOBIERNO DEL ESTADO DE HIDALGO</div>
  <div style="font-weight:700;">P r e s e n t e.</div>
</div>

<div class="intro-txt">{{{descripcion}}}</div>

<!-- Tabla en chunks de 5 -->
{{#if items.length}}
  {{#each (chunk items 5) as |grupo index|}}
    <div class="table-wrap">
      <table>
        <thead>
          <tr>
            <th class="col-part center">Partida</th>
            <th class="col-cant center">Cantidad</th>
            <th class="col-unid">Unidad</th>
            <th>Descripción</th>
            <th class="col-pu right">Precio unitario</th>
            <th class="col-sub right">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          {{#each grupo}}
          <tr>
            <td class="center">{{inc @index}}</td>
            <td class="center">{{this.cantidad}}</td>
            <td>{{this.unidad}}</td>
            <td>{{this.nombre}}</td>
            <td class="right">{{money this.unitario}}</td>
            <td class="right">{{money this.parcial}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    {{#if (notLast index ../lastIndex)}}
      <div class="pb-before"></div>
    {{else}}
      <!-- Totales y firma solo última página -->
      <div class="totals-wrap">
        <table class="totals">
          <tr><td class="label">Subtotal</td><td class="value">{{money totales.subtotal}}</td></tr>
          <tr><td class="label">IVA</td><td class="value">{{money totales.iva}}</td></tr>
          <tr><td class="label">Total</td><td class="value">{{money totales.total}}</td></tr>
        </table>
      </div>

      {{#if totalEnLetra}}
        <div class="enletra">{{totalEnLetra}}</div>
      {{/if}}

      <div class="bottom-row">
        <div class="terms">
          {{#if condiciones}}
            <div class="title">Términos y Condiciones</div>
            <div class="content">{{{condiciones}}}</div>
          {{/if}}
        </div>

        <div class="firma-box">
          <div class="atentamente">Atentamente</div>
          {{#if firmanteNombre}}
            <div class="nombre">{{{firmanteNombre}}}</div>
          {{/if}}
        </div>
      </div>
    {{/if}}
  {{/each}}
{{/if}}

</body>
</html>