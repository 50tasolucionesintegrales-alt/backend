          {{/if}}
        </div>
        {{#if firmantePuesto}}
          <div style="margin-top: 4px;">{{firmantePuesto}}</div>
        {{/if}}
      </div>

      <!-- Información de contacto -->
      <div class="contact-info">
        {{#if contactoTelefono}}{{contactoTelefono}}<br>{{/if}}
        {{#if contactoEmail}}{{contactoEmail}}<br>{{/if}}
        {{#if contactoDireccion}}{{contactoDireccion}}<br>{{/if}}
        {{#if contactoCiudad}}{{contactoCiudad}}{{/if}}
      </div>
    </div>
  </div>
</div>
{{/if}}
</body>
</html>