<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{ --brand:#213a57; --ink:#111; --line:#d9d9d9; --thead: #0c2c44 ; }

    @page { size: Letter; margin: 0 7mm 0; }
    
    /* Century Gothic */
    @font-face{
      font-family: "Century Gothic";
      src: url("assets/fonts/centurygothic.ttf") format("truetype");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }

    @font-face{
      font-family: "Century Gothic";
      src: url("assets/fonts/centurygothic_bold.ttf") format("truetype");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }

    body{ 
      font-family: "Century Gothic", Arial, Helvetica, sans-serif;
      margin: 0;
      padding: 0;
      font-size: 12px;
    }

    .page-container {
      position: relative;
      min-height: 279.4mm;
      width: 215.9mm;
      page-break-after: always;
    }

    .page-container:last-child {
      page-break-after: auto;
    }

    /* ===== Fondo / membrete ===== */
    .bg-page { 
      position:absolute; 
      inset:0; 
      z-index:-1; 
      pointer-events:none; 
    }
    .bg-page img{
      width:100%; 
      height:100%;
      object-fit:cover;
      display:block;
    }

    .content-area {
      position: relative;
      padding-top: 10mm;
      min-height: calc(279.4mm - 10mm);
      display: flex;
      flex-direction: column;
    }

    /* Dinámico */
    .fecha{ text-align:right; color:#333; margin:70px 5px 20px; font-weight:bold; }
    .dest{ font-weight:800; line-height:1.45; margin:12px 5px 0; }
    .presente{ font-weight:800; margin:10px 5px 0; }
    .intro{ margin:10px 5px 0; line-height:1.55; color:#222; }
    .label{ font-weight:400; }
    .folio{ font-weight:800; margin:12px 5px 0; text-align:right; }

    /* Contenedor de tabla */
    .table-wrap{ position:relative; margin:12px 5px 0; }

    /* ===== Tabla ===== */
    table { width:100%; border-collapse:collapse; }
    thead { display: table-header-group; }
    tr, td, th { page-break-inside: avoid; }

    thead th{
      background:var(--thead); color:#fff; font-weight:700;
      border:1px solid var(--thead); padding:8px; font-size:12px; text-align:left;
    }
    tbody td{ border:1px solid var(--line); padding:6px 8px; font-size:12px; background:#fff; }
    .center{ text-align:center; } .right{ text-align:right; }

    /* Totales a la derecha */
    .totals{ display:flex; justify-content:flex-end; margin:10px 5px 0; }
    .totals table{ width:70mm; border-collapse:collapse; }
    .totals td{ padding:6px 8px; border-left:1px solid var(--line); border-right:1px solid var(--line); }
    .totals tr:first-child td{ border-top:1px solid var(--line); }
    .totals tr:last-child  td{ border-bottom:1px solid var(--line); }
    .totals .label{ font-weight:700; background:#f6f6f6; }
    .totals .value{ text-align:right; }

    /* ===== Firma ===== */
    .firma{
      margin: 12mm 0 0;
      text-align: center;
    }
    .firma img{
      height: 95px;
      display: block;
      margin: 0 auto 8px auto;
    }

    .footer-section {
      margin-top: auto;
      padding-bottom: 15mm;
    }

    .important-content {
      page-break-inside: avoid;
      break-inside: avoid;
    }

    /* Información de contacto */
    .contact-info {
      margin: 8mm 5px 0;
      font-size: 11px;
      color: #333;
      line-height: 1.4;
    }
  </style>
</head>
<body>

<!-- PÁGINAS CON PAGINACIÓN INTELIGENTE -->
{{#each (smartChunk items)}}
<div class="page-container">
  <div class="bg-page"><img src="assets/emp2.png" alt="membrete"></div>
  <div class="content-area">

    <!-- ENCABEZADO SOLO EN PRIMERA PÁGINA -->
    {{#if (eq @index 0)}}
    <div class="folio">{{../folio}}</div>
    <div class="fecha">{{../lugar}}, a {{../fecha}}</div>
    <div class="dest">{{../destinatario}}</div>
    <div class="presente">{{../presente}}</div>

    <div class="intro" style="margin-top:10px;">
      {{{../descripcion}}}
    </div>
    {{/if}}

    <!-- EN PÁGINAS SUBSECUENTES, LA TABLA COMIENZA MÁS ARRIBA -->
    {{#if (gt @index 0)}}
    <div style="margin-top: 100px;"></div> <!-- Espacio similar a donde va la fecha en primera página -->
    {{/if}}

    <!-- TABLA DE ITEMS -->
    <div class="table-wrap">
      <table>
        <thead>
          <tr>
            <th class="center" style="width:16mm;">Número</th>
            <th>Descripción</th>
            <th class="center" style="width:22mm;">Cantidad</th>
            <th class="center" style="width:22mm;">Unidad</th>
            <th class="right" style="width:30mm;">Precio Unitario</th>
            <th class="right" style="width:30mm;">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          {{#each this}}
          <tr>
            <td class="center">{{this.globalIndex}}</td>
            <td>{{this.nombre}}</td>
            <td class="center">{{this.cantidad}}</td>
            <td class="center">{{this.unidad}}</td>
            <td class="right">{{money this.unitario}}</td>
            <td class="right">{{money this.parcial}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <!-- SECCIÓN IMPORTANTE SOLO EN ÚLTIMA PÁGINA SI HAY ESPACIO -->
    {{#if @last}}
      {{#if (not (needsSeparateImportantPage ../items))}}
      <div class="important-content" style="margin-top: 12px;">
        <!-- Totales -->
        <div class="totals">
          <table>
            <tr><td class="label">Subtotal</td><td class="value">{{money ../totales.subtotal}}</td></tr>
            <tr><td class="label">IVA ({{../ivaPct}}%)</td><td class="value">{{money ../totales.iva}}</td></tr>
            <tr><td class="label">Total</td><td class="value">{{money ../totales.total}}</td></tr>
          </table>
        </div>

        <!-- Cantidad en letra -->
        <div style="margin:6px 5px 0; font-size:12px;">
          <span class="label" style="font-weight:bold;">Importe total cotizado con letra: ({{../totalEnLetra}})</span> 
        </div>

        <!-- Condiciones -->
        {{#if ../condiciones}}
        <div style="margin:10px 5px 0;">
          <div class="label" style="margin-bottom:6px; font-weight: bold;">Condiciones generales</div>
          <div style="line-height:1.55; color:#222;">
            {{{../condiciones}}}
          </div>
        </div>
        {{/if}}

        <!-- Firma -->
        <div class="firma">
          <span style="font-weight:600; display:block; margin-bottom:8px;">Atentamente</span>
          {{#if ../incluirFirma}}
            {{#if ../firmaUrl}}<img src="{{../firmaUrl}}" alt="firma">{{/if}}
          {{else}}
            <!-- Espacio reservado para la firma cuando no hay imagen -->
            <div style="height:95px; margin-bottom:8px;"></div>
          {{/if}}
          <div style="font-weight:600; margin-top:10px;">
            {{#if ../firmanteNombre}}{{{../firmanteNombre}}}{{else}}Responsable de Ventas{{/if}}
          </div>
          {{#if ../firmantePuesto}}
            <div style="margin-top: 4px;">{{../firmantePuesto}}</div>
          {{/if}}
        </div>

        <!-- Información de contacto -->
        <div class="contact-info">
          {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
          {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
          {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
          {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
        </div>
      </div>
      {{else}}
      <!-- Info de contacto si no cabe la sección importante -->
      <div class="contact-info" style="margin-top: 20px;">
        {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
        {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
        {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
        {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
      </div>
      {{/if}}
    {{else}}
      <!-- Info de contacto en páginas intermedias -->
      <div class="contact-info" style="margin-top: 20px;">
        {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
        {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
        {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
        {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
      </div>
    {{/if}}
  </div>
</div>
{{/each}}

<!-- PÁGINA SEPARADA PARA INFORMACIÓN IMPORTANTE SI NO CABE EN LA ÚLTIMA -->
{{#if (needsSeparateImportantPage items)}}
<div class="page-container">
  <div class="bg-page"><img src="assets/emp2.png" alt="membrete"></div>
  <div class="content-area">
    
    <!-- Espacio desde arriba similar a la fecha -->
    <div style="margin-top: 70px;"></div>
    
    <div class="important-content">
      <!-- Totales -->
      <div class="totals">
        <table>
          <tr><td class="label">Subtotal</td><td class="value">{{money totales.subtotal}}</td></tr>
          <tr><td class="label">IVA ({{ivaPct}}%)</td><td class="value">{{money totales.iva}}</td></tr>
          <tr><td class="label">Total</td><td class="value">{{money totales.total}}</td></tr>
        </table>
      </div>

      <!-- Cantidad en letra -->
      <div style="margin:6px 5px 0; font-size:12px;">
        <span class="label" style="font-weight:bold;">Importe total cotizado con letra: ({{totalEnLetra}})</span> 
      </div>

      <!-- Condiciones -->
      {{#if condiciones}}
      <div style="margin:10px 5px 0;">
        <div class="label" style="margin-bottom:6px; font-weight: bold;">Condiciones generales</div>
        <div style="line-height:1.55; color:#222;">
          {{{condiciones}}}
        </div>
      </div>
      {{/if}}

      <!-- Firma -->
      <div class="firma">
        <span style="font-weight:600; display:block; margin-bottom:8px;">Atentamente</span>
        {{#if incluirFirma}}
          {{#if firmaUrl}}<img src="{{firmaUrl}}" alt="firma">{{/if}}
        {{else}}
          <!-- Espacio reservado para la firma cuando no hay imagen -->
          <div style="height:95px; margin-bottom:8px;"></div>
        {{/if}}
        <div style="font-weight:600; margin-top:10px;">
          {{#if firmanteNombre}}{{{firmanteNombre}}}{{else}}Responsable de Ventas{{/if}}
        </div>
        {{#if firmantePuesto}}
          <div style="margin-top: 4px;">{{firmantePuesto}}</div>
        {{/if}}
      </div>

      <!-- Información de contacto -->
      <div class="contact-info">
        {{#if contactoTelefono}}{{contactoTelefono}}<br>{{/if}}
        {{#if contactoEmail}}{{contactoEmail}}<br>{{/if}}
        {{#if contactoDireccion}}{{contactoDireccion}}<br>{{/if}}
        {{#if contactoCiudad}}{{contactoCiudad}}{{/if}}
      </div>
    </div>
  </div>
</div>
{{/if}}
</body>
</html>