<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{
      --brand:#b79b66;         /* acento */
      --border:#a28344;        /* dorado líneas */
      --ink:#111;
      --thead:#f3f3f3;         /* encabezado tabla claro */
    }

    @page { size: Letter; margin: 0; }

    /* Century Gothic local */
    @font-face{
      font-family: "Century Gothic";
      src: url("assets/fonts/centurygothic.ttf") format("truetype");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face{
      font-family: "Century Gothic";
      src: url("assets/fonts/centurygothic_bold.ttf") format("truetype");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }

    body{
      font-family: "Century Gothic", Arial, Helvetica, sans-serif;
      font-size: 12px;
      color: var(--ink);
    }

    /* ===== Fondo / membrete ===== */
    .bg-page{ position:fixed; inset:0; z-index:-1; pointer-events:none; }
    .bg-page img{ width:100%; height:100%; object-fit:cover; display:block; }

    /* Deja respirar el encabezado (logo + línea dorada) */
    .header-space{ height:32mm; }

    .fecha{ text-align:right; color:#333; margin:10px 15mm 16px; }
    .dest{ font-weight:700; line-height:1.45; margin:0 15mm; }
    .presente{ font-weight:800; margin:6px 15mm 0; }
    .intro{ margin:10px 15mm 0; line-height:1.55; color:#222; }
    .label{ font-weight:700; }

    /* ===== Tabla ===== */
    .table-wrap{ position:relative; margin:12px 12mm 0; }
    table{ width:96%; margin:0 auto; border-collapse:collapse; page-break-inside:auto; }
    thead{ display:table-header-group; }
    tr, td, th{ page-break-inside:avoid; break-inside:avoid; }

    thead th{
      background: var(--thead);
      color:#222;
      font-weight:700;
      border:1px solid var(--border);
      padding:8px;
      font-size:12px;
      text-align:left;
      vertical-align:middle;
    }
    tbody td{
      border:1px solid var(--border);
      padding:6px 8px;
      font-size:12px;
      background:#fff;
      vertical-align:top;
    }
    .center{ text-align:center; }
    .right { text-align:right; }

    /* ===== Totales en 3 columnas (Subtotal/IVA/Total + Monto en letra) ===== */
    .totals3{
      width:96%;
      margin:14px auto 0;          /* mismo ancho/centrado que la tabla */
    }
    .totals3 table{
      border-collapse:collapse;
      width:120mm;                 /* ancho del bloque de totales */
      justify-content: flex-end;
      background:#fff;
    }
    .totals3 td{
      border:1px solid var(--border);
      padding:6px 8px;
      font-size:12px;
      vertical-align:top;
    }
    .totals3 .lbl{ font-weight:700; background:#f6f3ee; }
    .totals3 .val{ text-align:right; white-space:nowrap; }
    .totals3 .letra{ width:70mm; } /* ajusta si quieres más/menos ancho */
    .totals3 .letra .title{ font-weight:700; margin-bottom:4px; }

    /* ===== Firma (manteniendo tus cambios) ===== */
    .firma{
      text-align:left;
      margin-top:100mm;
      margin-left:60px;
    }
    .firma img{
      height:75px;
      display:inline-block;
    }
  </style>
</head>
<body>

  <!-- Fondo -->
  <div class="bg-page"><img src="assets/emp5.png" alt="membrete"></div>

  <div class="header-space"></div>

  <!-- Lugar + fecha -->
  <div class="fecha">{{lugar}}; a {{fecha}}</div>

  <!-- Dirigido a -->
  <div class="dest">{{destinatario}}</div>
  <div class="presente">{{presente}}</div>

  <!-- Solicitud -->
  <div class="intro">
    <span class="label">Solicitud:</span> {{titulo}}
  </div>

  <!-- Texto -->
  <div class="intro">{{{descripcion}}}</div>

  <!-- ===== TABLA ===== -->
  <div class="table-wrap">
    <table>
      <thead>
        <tr>
          <th class="center" style="width:16mm;">No.</th>
          <th>Descripción</th>
          <th class="center" style="width:22mm;">Cantidad</th>
          <th class="center" style="width:22mm;">Medida</th>
          <th class="right"  style="width:30mm;">Precio Unitario</th>
          <th class="right"  style="width:30mm;">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
          {{#if (eq @index 10)}}
            </tbody></table></div>
            <div style="page-break-before:always;"></div>
            <div class="table-wrap">
              <table>
                <thead>
                  <tr>
                    <th class="center" style="width:16mm;">No.</th>
                    <th>Descripción</th>
                    <th class="center" style="width:22mm;">Cantidad</th>
                    <th class="center" style="width:22mm;">Medida</th>
                    <th class="right"  style="width:30mm;">Precio Unitario</th>
                    <th class="right"  style="width:30mm;">Subtotal</th>
                  </tr>
                </thead>
                <tbody>
          {{/if}}

          <tr>
            <td class="center">{{inc @index}}</td>
            <td>{{this.nombre}}</td>
            <td class="center">{{this.cantidad}}</td>
            <td class="center">{{this.unidad}}</td>
            <td class="right">{{money this.unitario}}</td>
            <td class="right">{{money this.parcial}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- ===== Totales 3 columnas al borde derecho ===== -->
  <div class="totals3 keep">
    <table>
      <tr>
        <td class="letra" rowspan="3">
          <div class="title">Monto total en letra:</div>
          <div>{{totalEnLetra}}</div>
        </td>
        <td class="lbl">Subtotal</td>
        <td class="val">{{money totales.subtotal}}</td>
      </tr>
      <tr>
        <td class="lbl">IVA ({{ivaPct}}%)</td>
        <td class="val">{{money totales.iva}}</td>
      </tr>
      <tr>
        <td class="lbl">Total</td>
        <td class="val">{{money totales.total}}</td>
      </tr>
    </table>
  </div>

  <!-- ===== Firma opcional (alineación izquierda, respetando el diseño original) ===== -->
  <div style="margin-top:90mm; text-align:left; margin-left:60px;">
    <span style="font-weight:700; display:block; margin-bottom:8px; padding-left:50px;">Atentamente</span>

    {{#if incluirFirma}}
    <img src="{{firmaUrl}}" alt="firma"
      style="height:75px; display:inline-block;">
    {{else}}
      <!-- Espacio reservado para la firma cuando no hay imagen -->
      <div style="height:100px; margin-left:18px; margin-bottom:8px;"></div>
    {{/if}}

    <div style="font-weight:700; padding-left:50px;">
      {{#if firmanteNombre}}
        {{firmanteNombre}}
      {{else}}
        Responsable de Ventas
      {{/if}}
    </div>
  </div>


</body>
</html>
