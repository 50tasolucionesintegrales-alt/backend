<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{ --brand:#b79b66; --ink:#111; --line:#d9d9d9; --thead:#f3f3f3; }

    /* Carta; mismo marco que emp-1 */
    @page { size: Letter; margin: 0 0 0; }
    body  { font-family: Arial, Helvetica, sans-serif; font-size:12px; color:var(--ink); }

    /* Fondo con el membrete completo */
    .bg-page{ position:fixed; inset:0; z-index:-1; pointer-events:none; }
    .bg-page img{
      position:absolute; top:0; left:0;
      width:100%; height:100%; object-fit:cover; display:block;
    }

    .header-space{ height:36mm; }

    .fecha{ text-align:right; color:#333; margin:10px 40px 20px; }
    .dest{ font-weight:700; line-height:1.45; margin:12px 40px 0; }
    .presente{ font-weight:800; margin:10px 40px 0; }
    .intro{ margin:10px 40px 0; line-height:1.55; color:#222; }
    .label{ font-weight:700; }

    .table-wrap{ position:relative; margin:12px 40px 0; }
    table{ width:100%; border-collapse:collapse; }
    thead th{
      color:#222; font-weight:700;
      border:1px solid #a28344 ; padding:8px; font-size:12px; text-align:left;
    }
    tbody td{
      border:1px solid #a28344; padding:6px 8px; font-size:12px;
    }
    .center{ text-align:center; } .right{ text-align:right; }

    /* Paginación: salto cada 10 filas (sin helpers) */
    tbody tr:nth-child(10n):not(:last-child){ page-break-after: always; }

    .totals{ display:flex; justify-content:flex-end; margin:10px 40px 0; }
    .totals table{ width:70mm; border-collapse:collapse; }
    .totals td{ padding:6px 8px; border-left:1px solid #a28344; border-right:1px solid #a28344; }
    .totals tr:first-child td{ border-top:1px solid #a28344; }
    .totals tr:last-child  td{ border-bottom:1px solid #a28344; }
    .totals .label{ font-weight:700; background:#f6f6f6; }
    .totals .value{ text-align:right; }
  </style>
</head>
<body>

  <div class="bg-page"><img src="assets/emp5.png" alt="membrete"></div>

  <div class="header-space"></div>

  <div class="fecha">Mineral de la Reforma, Hidalgo, a {{fecha}}</div>

  <div class="dest">{{destinatario}}</div>
  <div class="presente">PRESENTE.</div>

  <div class="intro">{{{descripcion}}}</div>

  <div class="table-wrap">
    <table>
      <thead>
        <tr>
          <th class="center" style="width:16mm;">No.</th>
          <th>Descripción</th>
          <th class="center" style="width:22mm;">Cantidad</th>
          <th class="center" style="width:22mm;">Medida</th>
          <th class="right"  style="width:30mm;">Precio Unitario</th>
          <th class="right"  style="width:30mm;">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
        <tr>
          <td class="center">{{inc @index}}</td>
          <td>{{this.nombre}}</td>
          <td class="center">{{this.cantidad}}</td>
          <td class="center">{{this.unidad}}</td>
          <td class="right">{{money this.unitario}}</td>
          <td class="right">{{money this.parcial}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="totals">
    <table>
      <tr><td class="label">Subtotal</td><td class="value">{{money totales.subtotal}}</td></tr>
      <tr><td class="label">IVA ({{ivaPct}}%)</td><td class="value">{{money totales.iva}}</td></tr>
      <tr><td class="label">Total</td><td class="value">{{money totales.total}}</td></tr>
    </table>
  </div>

</body>
</html>
