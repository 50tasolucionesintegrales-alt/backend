<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{
      --brand:#b79b66;         /* acento */
      --border:#a28344;        /* dorado líneas */
      --ink:#111;
      --thead:#f3f3f3;         /* encabezado tabla claro */
    }

    @page { size: Letter; margin: 0; }

    /* Century Gothic local */
    @font-face{
      font-family: "Century Gothic";
      src: url("assets/fonts/centurygothic.ttf") format("truetype");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face{
      font-family: "Century Gothic";
      src: url("assets/fonts/centurygothic_bold.ttf") format("truetype");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }

    body{
      font-family: "Century Gothic", Arial, Helvetica, sans-serif;
      font-size: 12px;
      color: var(--ink);
      margin: 0;
      padding: 0;
    }

    .page-container {
      position: relative;
      min-height: 279.4mm;
      width: 215.9mm;
      page-break-after: always;
    }

    .page-container:last-child {
      page-break-after: auto;
    }

    /* ===== Fondo / membrete ===== */
    .bg-page{ 
      position:absolute; 
      inset:0; 
      z-index:-1; 
      pointer-events:none; 
    }
    .bg-page img{ 
      width:100%; 
      height:100%; 
      object-fit:cover; 
      display:block; 
    }

    .content-area {
      position: relative;
      padding-top: 32mm;
      min-height: calc(279.4mm - 32mm);
      display: flex;
      flex-direction: column;
    }

    .fecha{ text-align:right; color:#333; margin:10px 15mm 16px; }
    .dest{ font-weight:700; line-height:1.45; margin:0 15mm; }
    .presente{ font-weight:800; margin:6px 15mm 0; }
    .intro{ margin:10px 15mm 0; line-height:1.55; color:#222; }
    .label{ font-weight:700; }

    /* ===== Tabla ===== */
    .table-wrap{ position:relative; margin:12px 12mm 0; }
    table{ width:96%; margin:0 auto; border-collapse:collapse; }
    thead{ display:table-header-group; }
    tr, td, th{ page-break-inside:avoid; }

    thead th{
      background: var(--thead);
      color:#222;
      font-weight:700;
      border:1px solid var(--border);
      padding:8px;
      font-size:12px;
      text-align:left;
      vertical-align:middle;
    }
    tbody td{
      border:1px solid var(--border);
      padding:6px 8px;
      font-size:12px;
      background:#fff;
      vertical-align:top;
    }
    .center{ text-align:center; }
    .right { text-align:right; }

    /* ===== Totales en 3 columnas ===== */
    .totals3{
      width:96%;
      margin:14px auto 0;
    }
    .totals3 table{
      border-collapse:collapse;
      width:120mm;
      justify-content: flex-end;
      background:#fff;
    }
    .totals3 td{
      border:1px solid var(--border);
      padding:6px 8px;
      font-size:12px;
      vertical-align:top;
    }
    .totals3 .lbl{ font-weight:700; background:#f6f3ee; }
    .totals3 .val{ text-align:right; white-space:nowrap; }
    .totals3 .letra{ width:70mm; }
    .totals3 .letra .title{ font-weight:700; margin-bottom:4px; }

    /* ===== Firma ===== */
    .firma{
      text-align:left;
      margin-top: 12mm;
      margin-left: 60px;
    }
    .firma img{
      height:75px;
      display:inline-block;
    }

    .important-content {
      page-break-inside: avoid;
      break-inside: avoid;
    }

    /* Información de contacto */
    .contact-info {
      margin: 8mm 15mm 0;
      font-size: 11px;
      color: #333;
      line-height: 1.4;
    }
  </style>
</head>
<body>

<!-- PÁGINAS CON PAGINACIÓN INTELIGENTE -->
{{#each (smartChunk items)}}
<div class="page-container">
  <div class="bg-page"><img src="assets/emp5.png" alt="membrete"></div>
  <div class="content-area">

    <!-- ENCABEZADO SOLO EN PRIMERA PÁGINA -->
    {{#if (eq @index 0)}}
    <!-- Lugar + fecha -->
    <div class="fecha">{{../lugar}}; a {{../fecha}}</div>

    <!-- Dirigido a -->
    <div class="dest">{{../destinatario}}</div>
    <div class="presente">{{../presente}}</div>

    <!-- Solicitud -->
    <div class="intro">
      <span class="label">Solicitud:</span> {{../titulo}}
    </div>

    <!-- Texto -->
    <div class="intro">{{{../descripcion}}}</div>
    {{/if}}

    <!-- EN PÁGINAS SUBSECUENTES, LA TABLA COMIENZA MÁS ARRIBA -->
    {{#if (gt @index 0)}}
    <div style="margin-top: 20px;"></div>
    {{/if}}

    <!-- TABLA DE ITEMS -->
    <div class="table-wrap">
      <table>
        <thead>
          <tr>
            <th class="center" style="width:16mm;">No.</th>
            <th>Descripción</th>
            <th class="center" style="width:22mm;">Cantidad</th>
            <th class="center" style="width:22mm;">Medida</th>
            <th class="right" style="width:30mm;">Precio Unitario</th>
            <th class="right" style="width:30mm;">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          {{#each this}}
          <tr>
            <td class="center">{{this.globalIndex}}</td>
            <td>{{this.nombre}}</td>
            <td class="center">{{this.cantidad}}</td>
            <td class="center">{{this.unidad}}</td>
            <td class="right">{{money this.unitario}}</td>
            <td class="right">{{money this.parcial}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <!-- SECCIÓN IMPORTANTE SOLO EN ÚLTIMA PÁGINA SI HAY ESPACIO -->
    {{#if @last}}
      {{#if (not (needsSeparateImportantPage ../items))}}
      <div class="important-content" style="margin-top: 12px;">
        <!-- Totales en 3 columnas al borde derecho -->
        <div class="totals3">
          <table>
            <tr>
              <td class="letra" rowspan="3">
                <div class="title">Monto total en letra:</div>
                <div>{{../totalEnLetra}}</div>
              </td>
              <td class="lbl">Subtotal</td>
              <td class="val">{{money ../totales.subtotal}}</td>
            </tr>
            <tr>
              <td class="lbl">IVA ({{../ivaPct}}%)</td>
              <td class="val">{{money ../totales.iva}}</td>
            </tr>
            <tr>
              <td class="lbl">Total</td>
              <td class="val">{{money ../totales.total}}</td>
            </tr>
          </table>
        </div>

        <!-- Firma -->
        <div class="firma">
          <span style="font-weight:700; display:block; margin-bottom:8px; padding-left:50px;">Atentamente</span>
          {{#if ../incluirFirma}}
            {{#if ../firmaUrl}}<img src="{{../firmaUrl}}" alt="firma">{{/if}}
          {{else}}
            <!-- Espacio reservado para la firma cuando no hay imagen -->
            <div style="height:100px; margin-bottom:8px;"></div>
          {{/if}}
          <div style="font-weight:700; padding-left:50px;">
            {{#if ../firmanteNombre}}{{{../firmanteNombre}}}{{else}}Responsable de Ventas{{/if}}
          </div>
          {{#if ../firmantePuesto}}
            <div style="padding-left:50px; margin-top: 4px;">{{../firmantePuesto}}</div>
          {{/if}}
        </div>

        <!-- Información de contacto -->
        <div class="contact-info">
          {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
          {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
          {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
          {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
        </div>
      </div>
      {{else}}
      <!-- Info de contacto si no cabe la sección importante -->
      <div class="contact-info" style="margin-top: 20px;">
        {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
        {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
        {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
        {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
      </div>
      {{/if}}
    {{else}}
      <!-- Info de contacto en páginas intermedias -->
      <div class="contact-info" style="margin-top: 20px;">
        {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
        {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
        {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
        {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
      </div>
    {{/if}}
  </div>
</div>
{{/each}}

<!-- PÁGINA SEPARADA PARA INFORMACIÓN IMPORTANTE SI NO CABE EN LA ÚLTIMA -->
{{#if (needsSeparateImportantPage items)}}
<div class="page-container">
  <div class="bg-page"><img src="assets/emp5.png" alt="membrete"></div>
  <div class="content-area">
    
    <!-- Espacio desde arriba -->
    <div style="margin-top: 20px;"></div>
    
    <div class="important-content">
      <!-- Totales en 3 columnas al borde derecho -->
      <div class="totals3">
        <table>
          <tr>
            <td class="letra" rowspan="3">
              <div class="title">Monto total en letra:</div>
              <div>{{totalEnLetra}}</div>
            </td>
            <td class="lbl">Subtotal</td>
            <td class="val">{{money totales.subtotal}}</td>
          </tr>
          <tr>
            <td class="lbl">IVA ({{ivaPct}}%)</td>
            <td class="val">{{money totales.iva}}</td>
          </tr>
          <tr>
            <td class="lbl">Total</td>
            <td class="val">{{money totales.total}}</td>
          </tr>
        </table>
      </div>

      <!-- Firma -->
      <div class="firma">
        <span style="font-weight:700; display:block; margin-bottom:8px; padding-left:50px;">Atentamente</span>
        {{#if incluirFirma}}
          {{#if firmaUrl}}<img src="{{firmaUrl}}" alt="firma">{{/if}}
        {{else}}
          <!-- Espacio reservado para la firma cuando no hay imagen -->
          <div style="height:100px; margin-bottom:8px;"></div>
        {{/if}}
        <div style="font-weight:700; padding-left:50px;">
          {{#if firmanteNombre}}{{{firmanteNombre}}}{{else}}Responsable de Ventas{{/if}}
        </div>
        {{#if firmantePuesto}}
          <div style="padding-left:50px; margin-top: 4px;">{{firmantePuesto}}</div>
        {{/if}}
      </div>

      <!-- Información de contacto -->
      <div class="contact-info">
        {{#if contactoTelefono}}{{contactoTelefono}}<br>{{/if}}
        {{#if contactoEmail}}{{contactoEmail}}<br>{{/if}}
        {{#if contactoDireccion}}{{contactoDireccion}}<br>{{/if}}
        {{#if contactoCiudad}}{{contactoCiudad}}{{/if}}
      </div>
    </div>
  </div>
</div>
{{/if}}
</body>
</html>