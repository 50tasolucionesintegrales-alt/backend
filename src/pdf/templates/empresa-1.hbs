<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root {
      --brand: #c51b1b;
      --ink: #111;
      --line: #d9d9d9;
      --thead: #c51b1b;
    }

    @page {
      size: Letter;
      margin: 0 10mm 0;
    }

    @font-face {
      font-family: "InterVar";
      src: url("assets/fonts/Inter-VariableFont.ttf") format("truetype-variations");
      font-weight: 100 900;
      font-style: normal;
      font-display: swap;
    }

    body {
      font-family: "InterVar", Arial, Helvetica, sans-serif;
      font-size: 12px;
    }

    .bg-page {
      position: fixed;
      inset: 0;
      z-index: -1;
      pointer-events: none;
    }

    .bg-page img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    .header-space {
      height: 23mm;
    }

    .fecha {
      text-align: right;
      color: #333;
      margin: 50px 15px 20px;
    }

    .dest {
      font-weight: 700;
      line-height: 1.45;
      margin: 12px 15px 0;
    }

    .presente {
      font-weight: 800;
      margin: 10px 15px 0;
    }

    .intro {
      margin: 10px 15px 0;
      line-height: 1.55;
      color: #222;
    }

    .label {
      font-weight: 700;
    }

    .folio {
      text-align: center;
      font-weight: 800;
      margin: 12px 15px 0;
      font-size: 14px;
      color: #143444;
    }

    .table-wrap {
      position: relative;
      margin: 12px 15px 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      page-break-inside: auto;
    }

    thead {
      display: table-header-group;
    }

    tr,
    td,
    th {
      page-break-inside: avoid;
      break-inside: avoid;
    }

    .pb-before {
      page-break-before: always;
      break-before: page;
    }

    thead th {
      background: var(--thead);
      color: #fff;
      font-weight: 700;
      border: 1px solid var(--thead);
      padding: 8px;
      font-size: 12px;
      text-align: left;
    }

    tbody td {
      border: 1px solid var(--line);
      padding: 6px 8px;
      font-size: 12px;
      background: #fff;
    }

    .center {
      text-align: center;
    }

    .right {
      text-align: right;
    }

    .totals {
      display: flex;
      justify-content: flex-end;
      margin: 10px 15px 0;
    }

    .totals table {
      width: 70mm;
      border-collapse: collapse;
    }

    .totals td {
      padding: 6px 8px;
      border-left: 1px solid var(--line);
      border-right: 1px solid var(--line);
    }

    .totals tr:first-child td {
      border-top: 1px solid var(--line);
    }

    .totals tr:last-child td {
      border-bottom: 1px solid var(--line);
    }

    .totals .label {
      font-weight: 700;
      background: #f6f6f6;
    }

    .totals .value {
      text-align: right;
    }
  </style>
</head>

<body>

  <div class="bg-page"><img src="assets/emp1.png" alt="membrete"></div>

  <div class="header-space"></div>

  <div class="folio">{{folio}}</div>

  <div class="fecha">{{lugar}}; a {{fecha}}</div>

  <div class="dest">{{destinatario}}</div>
  <div class="presente">{{presente}}</div>

  <div class="intro">
    <div><span class="label">Solicitud de cotización:</span> {{titulo}}</div>
    <div><span class="label">No. de conceptos:</span> {{items.length}}</div>
    <div><span class="label">Importe Total:</span> {{money totales.total}}</div>
  </div>

  <div class="intro" style="margin-top:10px;">
    {{{descripcion}}}
  </div>

  {{!-- Se muestran los items en grupos de 5 por hoja --}}
  {{#each (chunk items 5)}}
    <div class="table-wrap {{#unless @first}}pb-before{{/unless}}">
      <table>
        <thead>
          <tr>
            <th class="center" style="width:16mm;">Concepto</th>
            <th>Descripción</th>
            <th class="center" style="width:22mm;">Unidad</th>
            <th class="center" style="width:22mm;">Cantidad</th>
            <th class="right" style="width:30mm;">Unitario</th>
            <th class="right" style="width:30mm;">Parcial</th>
          </tr>
        </thead>
        <tbody>
          {{#each this}}
          <tr>
            <td class="center">{{addOne (add (multiply @../index 5) @index)}}</td>
            <td>{{this.nombre}}</td>
            <td class="center">{{this.unidad}}</td>
            <td class="center">{{this.cantidad}}</td>
            <td class="right">{{money this.unitario}}</td>
            <td class="right">{{money this.parcial}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>

      {{!-- Solo en la última página mostramos totales y firma --}}
      {{#if @last}}
        <div class="totals keep">
          <table>
            <tr>
              <td class="label">Subtotal</td>
              <td class="value">{{money totales.subtotal}}</td>
            </tr>
            <tr>
              <td class="label">IVA ({{ivaPct}}%)</td>
              <td class="value">{{money totales.iva}}</td>
            </tr>
            <tr>
              <td class="label">Monto Total</td>
              <td class="value">{{money totales.total}}</td>
            </tr>
          </table>
        </div>

        <div style="margin:12px 15px 0; font-size:12px; font-weight:600; color:#000;">
          <span class="label">Importe en letra:</span> {{totalEnLetra}}
        </div>

        {{#if (or condiciones incluirFirma)}}
        {{#if condiciones}}
        <div style="margin:25px 15px 0;">
          <div style="margin-bottom:6px; color:#143444; font-weight:800;">Condiciones</div>
          <div style="line-height:1.55; color:#000;">
            {{{condiciones}}}
          </div>
        </div>
        {{/if}}

        <div style="margin:45mm auto 0; text-align:center;">
          <span style="font-weight:600; display:block; margin-bottom:8px;">Atentamente</span>

          {{#if incluirFirma}}
          <img src="{{firmaUrl}}" alt="firma"
            style="height:85px; display:block; margin:0 auto 8px auto;">
          {{/if}}

          <div style="font-weight:600; margin-top:10px;">
            {{#if firmanteNombre}}
              {{firmanteNombre}}
            {{else}}
              Responsable de Ventas
            {{/if}}
          </div>
        </div>
        {{/if}}
      {{/if}}
    </div>
  {{/each}}

</body>
</html>