<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{
      --ink:#111;
      --muted:#444;
      --line:#cfd2d7;
      --black:#000;
      --thead:#000;      /* cabecera de la tabla en negro */
      --theadText:#fff;
      --grayBox:#f2f2f2; /* cajas grises del diseño */
      --accent:#000;     /* para títulos / bordes oscuros */
    }

    @page { size: Letter; margin: 0; }

    /* Tahoma local (ya la tienes) */
    @font-face{
      font-family: "TahomaLocal";
      src: url("assets/fonts/tahoma.ttf") format("truetype");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    body{
      font-family: "TahomaLocal", Arial, Helvetica, sans-serif;
      font-size: 12px; line-height: 1.45; color: var(--ink);
    }

    /* ===== Fondo / membrete ===== */
    .bg-page{ position:fixed; inset:0; z-index:-1; pointer-events:none; }
    .bg-page img{ width:100%; height:100%; object-fit:cover; display:block; }

    /* Respeta el encabezado del membrete superior */
    .header-space{ height: 42mm; }

    /* Encabezados de texto */
    .block{ margin: 0 18mm; }
    .title{ font-size:18px; font-weight:700; letter-spacing:.3px; margin-bottom:6px; }
    .row{ display:flex; gap:8px; flex-wrap:wrap; margin-top:2px; }
    .label{ font-weight:700; }
    .muted{ color:#333; }

    /* Tabla principal */
    .table-wrap{ margin: 10px 12mm 0; }
    table{ width:100%; border-collapse:collapse; page-break-inside:auto; table-layout:fixed; }
    thead{ display:table-header-group; }
    tr, td, th{ page-break-inside:avoid; break-inside:avoid; }

    thead th{
      background:var(--thead);
      color:var(--theadText);
      border:1px solid #000;
      padding:7px 8px;
      font-weight:700; text-align:left; font-size:12px;
    }
    tbody td{
      border:1px solid #000;
      padding:6px 8px; background:#fff; vertical-align:top; font-size:12px;
    }
    .center{ text-align:center; }
    .right { text-align:right; }

    /* Anchos aproximados como el original */
    .col-par   { width:16mm; }
    .col-cant  { width:22mm; }
    .col-carac { width:auto; }
    .col-unit  { width:28mm; }
    .col-total { width:28mm; }

    /* Totales a la derecha + “monto en letra” como fila larga */
    .totals-wrap{ margin:10px 12mm 0; display:flex; justify-content:flex-end; }
    .totals{ width:70mm; border-collapse:collapse; }
    .totals td{
      border-left:1px solid var(--line);
      border-right:1px solid var(--line);
      padding:6px 8px; background:#fff;
    }
    .totals tr:first-child td{ border-top:1px solid var(--line); }
    .totals tr:last-child td{ border-bottom:1px solid var(--line); }
    .totals .label{ font-weight:700; }
    .totals .value{ text-align:right; }

    .monto-wrap{
      margin:8px 12mm 0;
    }
    .monto{
      display:grid; grid-template-columns: 110px 1fr;
      border:1px solid var(--line); background:#fff;
    }
    .monto div{ padding:6px 8px; }
    .monto .tag{ font-weight:700; border-right:1px solid var(--line); }

    /* Caja de condiciones (encabezado negro + cuerpo gris) */
    .conds{
      margin:12px 12mm 0;
      border:1px solid #000;
      background:#fff;
    }
    .conds .head{
      background:#000; color:#fff; font-weight:700; padding:6px 8px; font-size:12px;
    }
    .conds .body{
      background:#f6f6f6; padding:10px 12px; color:#222; line-height:1.55;
    }

    /* Fila de firma / sin firma: recuadro vacío */
    .sign-row{
      margin:14mm 12mm 0;
      display:grid;
      grid-template-columns: 1fr 92mm; /* firma hacia la derecha como en el doc */
      gap:14mm; align-items:start;
    }
    .sign-box{
      min-height:46mm;
      position:relative;
      background:#fff;
    }
    .sign-inner{
      position:absolute; inset:8px;
      display:flex; flex-direction:column; align-items:center; justify-content:center;
      gap:6px; text-align:center;
    }
    .sign-caption{ font-size:11px; color:#555; }
    .sign-name{ font-weight:700; }
    .sign-img{ height:85px; display:block; }

    /* Pie diagonal del membrete */
    .footer-space{ height: 46mm; }
  </style>
</head>
<body>

  <!-- Fondo -->
  <div class="bg-page"><img src="assets/emp10.png" alt="membrete"></div>

  <div class="header-space"></div>

  <!-- Encabezado textual -->
  <div class="block">
    <div class="title">COTIZACIÓN {{titulo}}</div>

    <div class="row"><span class="label">CLIENTE:</span>&nbsp;<span class="muted">{{destinatario}}</span></div>
    <div class="row"><span class="label">FECHA:</span>&nbsp;<span class="muted">{{lugar}} a {{fecha}}</span></div>
  </div>

  <!-- Tabla principal -->
  <div class="table-wrap">
    <table>
      <thead>
        <tr>
          <th class="col-par center">Partida</th>
          <th class="col-cant center">Cantidad</th>
          <th class="col-carac">Características</th>
          <th class="col-unit center">Costo unitario</th>
          <th class="col-total center">Total</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
          <tr>
            <td class="center">{{inc @index}}</td>
            <td class="center">{{this.cantidad}}</td>
            <td>{{this.nombre}}</td>
            <td class="right">{{money this.unitario}}</td>
            <td class="right">{{money this.parcial}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Totales -->
  <div class="totals-wrap">
    <table class="totals">
      <tr><td class="label">Subtotal</td><td class="value">{{money totales.subtotal}}</td></tr>
      <tr><td class="label">IVA</td><td class="value">{{money totales.iva}}</td></tr>
      <tr><td class="label">Total</td><td class="value">{{money totales.total}}</td></tr>
    </table>
  </div>

  <!-- Monto en letra (línea larga) -->
  {{#if totalEnLetra}}
  <div class="monto-wrap">
    <div class="monto">
      <div class="tag">Monto en letra:</div>
      <div>{{totalEnLetra}}</div>
    </div>
  </div>
  {{/if}}

  <!-- Condiciones -->
  {{#if condiciones}}
  <div class="conds">
    <div class="head">Condiciones Generales</div>
    <div class="body">
      {{{condiciones}}}
    </div>
  </div>
  {{/if}}

  <!-- Firma (si no envías firma, queda sólo el recuadro) -->
  <div class="sign-row">
    <div></div> <!-- columna izquierda vacía para respetar layout del original -->

    <div class="sign-box">
      <div class="sign-inner">
        <div class="sign-caption">Atentamente</div>

        {{#if incluirFirma}}
          {{#if firmaUrl}}
            <img class="sign-img" src="{{firmaUrl}}" alt="firma">
          {{/if}}
          {{else}}
            <!-- Espacio reservado para la firma cuando no hay imagen -->
            <div style="height:100px; margin-left:18px; margin-bottom:8px;"></div>
          {{/if}}
          <div class="sign-name">
            {{#if firmanteNombre}}
              {{{firmanteNombre}}}  {{!-- permite “Nombre<br>Cargo” --}}
            {{else}}
              <!-- Nombre y cargo (si no mandas nada, el recuadro queda como espacio de firma) -->
            {{/if}}
          </div>
      </div>
    </div>
  </div>

  <div class="footer-space"></div>
</body>
</html>
