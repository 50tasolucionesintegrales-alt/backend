<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{
      --ink:#111;
      --line:#c9ced8;
      --thead:#5b3ca5;   /* morado CHALOR */
      --theadText:#ffffff;
    }

    @page { size: Letter; margin: 0; }
    body  { font-family: Arial, Helvetica, sans-serif; font-size:12px; color:var(--ink); }

    /* Membrete de fondo */
    .bg-page{ position:fixed; inset:0; z-index:-1; pointer-events:none; }
    .bg-page img{ width:100%; height:100%; object-fit:cover; display:block; }

    /* Respiración para no pisar el membrete */
    .header-space { height: 38mm; }
    .footer-space { height: 30mm; } /* pie con datos de contacto del PNG */

    /* Encabezado */
    .fecha{ margin:0 13mm 10px; text-align:left; color:#333; font-weight:700; }
    .dest{  margin:0 13mm; font-weight:700; line-height:1.45; text-align:right; font-weight: 700; }

    /* Texto libre (usa {{{descripcion}}} para el bloque “Quien suscribe…”) */
    .intro{ margin:10px 13mm 0; line-height:1.55; color:#222; }
    .solicitud{ margin:10px 13mm 0; line-height:1.55; color:#222; font-weight:700; }

    /* Tabla */
    .table-wrap{ margin:10px 6mm 0; }
    table{ width:100%; border-collapse:collapse; table-layout:fixed; background:#fff; border:0.5px solid #000; }
    thead th{
      background:var(--thead); color:var(--theadText);
      border:0.5px solid #000; padding:7px 8px; font-size:12px; text-align:left; line-height:1.2;
    }
    tbody td{
      border:0.5px solid #000; padding:6px 8px; font-size:12px; line-height:1.35;
      background:#fff; vertical-align:top;
    }
    .center{ text-align:center; } .right{ text-align:right; }

    /* Anchos aproximados del original */
    .w-num{width:10mm;} .w-marca{width:26mm;} .w-cant{width:18mm;} .w-unid{width:18mm;}
    .w-unit{width:28mm;} .w-sub{width:28mm;}

    /* Totales a la derecha (tres filas) */
    .totals-wrap{ margin:10px 6mm 0; }
    .totals{ margin-left:auto; width:70mm; border-collapse:collapse; }
    .totals td{
      padding:6px 8px; background:#fff;
      border-left:1px solid var(--line); border-right:1px solid var(--line);
    }
    .totals tr:first-child td{ border-top:1px solid var(--line); }
    .totals tr:last-child  td{ border-bottom:1px solid var(--line); }
    .totals .label{ font-weight:700; } .totals .value{ text-align:right; }

    /* Monto en letra centrado y entre paréntesis */
    .enletra{ margin:8px 18mm 0; text-align:center; font-weight:700; }

    /* Fila inferior: términos izq. + espacio firma der. */
    .bottom-row{
      margin:12px 6mm 0;
      display:grid;
      grid-template-columns: 1fr 70mm;  /* derecha = caja de firma/sello */
      gap:12mm;
      align-items:start;
    }
    .terms .title{ font-weight:700; margin-bottom:6px; }
    .terms .content{ line-height:1.55; }

    /* Firma sencilla por márgenes (como en el 5º) */
    .firma{
      text-align: center;     /* centrada dentro del recuadro */
      margin-top: 97mm;       /* súbela/bájala: 10–16mm según tu impresión */
      margin-right: 22mm;      /* dale aire al borde derecho del recuadro */
    }
    .firma img{
      height: 20mm;           /* ajusta 28–36mm si la ves muy chica/grande */
      display: inline-block;
    }


  </style>
</head>
<body>

  <!-- Fondo -->
  <div class="bg-page"><img src="assets/emp7.png" alt="membrete"></div>

  <div class="header-space"></div>

  <!-- Solo lo que trae el original -->
  <div class="dest">{{destinatario}}</div>
  <div class="fecha">{{fecha}}</div>
  <div class="solicitud">Cotización <span style="font-weight:600;">{{titulo}} ({{folio}})</span></div>

  <div class="intro">
    {{{descripcion}}}
  </div>

  <!-- Tabla como en el original -->
  <div class="table-wrap">
    <table>
      <thead>
        <tr>
          <th class="center w-num">#</th>
          <th>Producto</th>
          <th class="w-marca">Marca</th>
          <th class="center w-cant">Cantidad</th>
          <th class="center w-unid">Unidad</th>
          <th class="right w-unit">Precio Unitario</th>
          <th class="right w-sub">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
        <tr>
          <td class="center w-num">{{inc @index}}</td>
          <td>{{this.nombre}}</td>
          <td class="w-marca">{{this.marca}}</td>
          <td class="center w-cant">{{this.cantidad}}</td>
          <td class="center w-unid">{{this.unidad}}</td>
          <td class="right  w-unit">{{money this.unitario}}</td>
          <td class="right  w-sub">{{money this.parcial}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Totales -->
  <div class="totals-wrap">
    <table class="totals">
      <tr><td class="label">Subtotal</td>      <td class="value">{{money totales.subtotal}}</td></tr>
      <tr><td class="label">I.V.A.</td>        <td class="value">{{money totales.iva}}</td></tr>
      <tr><td class="label">Importe Total</td> <td class="value">{{money totales.total}}</td></tr>
    </table>
  </div>

  {{#if totalEnLetra}}
    <div class="enletra">(Monto Total en letra: {{totalEnLetra}})</div>
  {{/if}}

  <!-- Términos + espacio firma (sin textos “Atentamente”/nombre) -->
  <div class="bottom-row">
    <div class="terms">
      {{#if condiciones}}
        <div class="title">Términos y Condiciones</div>
        <div class="content">{{{condiciones}}}</div>
      {{/if}}
    </div>

    <div class="firma">
      {{#if incluirFirma}}
        <img src="{{firmaUrl}}" alt="firma">
      {{/if}}
    </div>

  </div>

  <div class="footer-space"></div>
</body>
</html>
