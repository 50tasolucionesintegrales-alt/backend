<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{ --brand:#e0553c; --ink:#111; --line:#d9d9d9; --thead:#f6f6f6; --theadBorder:#d0d0d0; }

    /* Mismas medidas que los otros */
    @page { size: Letter; margin: 0 3mm 0; }
    body  { font-family: Arial, Helvetica, sans-serif; font-size:12px; color:var(--ink); }

    /* ===== Fondo / membrete ===== */
    .bg-page { position:fixed; inset:0; z-index:-1; pointer-events:none; }
    .bg-page img{
      position:absolute; top:0; left:0;
      width:100%; height:100%;
      object-fit:cover; display:block;
    }

    /* Resguarda el encabezado del membrete */
    .header-space{ height:36mm; }

    /* Dinámico */
    .fecha{ text-align:right; color:#333; margin:10px 15px 18px; }
    .dest{ font-weight:700; line-height:1.45; margin:12px 15px 0; }
    .presente{ font-weight:800; margin:10px 15px 0; }
    .intro{ margin:12px 15px 0; line-height:1.55; color:#222; }
    .label{ font-weight:700; }

    /* Contenedor de tabla */
    .table-wrap{ position:relative; margin:12px 15px 0; }

    /* ===== Paginación (salta antes del #11) ===== */
    table { width:100%; border-collapse:collapse; page-break-inside:auto; }
    thead { display: table-header-group; }             /* repite encabezado al saltar */
    tr     { page-break-inside: avoid; break-inside: avoid; }
    td, th { page-break-inside: avoid; break-inside: avoid; }
    .keep  { page-break-inside: avoid; break-inside: avoid; }
    .pb-before{ page-break-before: always; break-before: page; }

    /* Encabezado estilo claro con borde */
    thead th{
      background:var(--thead);
      color:#333;
      font-weight:700;
      border:1px solid var(--theadBorder);
      padding:8px; font-size:12px; text-align:left;
    }

    /* Celdas */
    tbody td{
      border:1px solid var(--line);
      padding:6px 8px; font-size:12px; background:#fff; vertical-align:top;
    }

    .center{ text-align:center; }
    .right { text-align:right;  }

    /* Totales a la derecha (bloque compacto) */
    .totals{ display:flex; justify-content:flex-end; margin:10px 15px 0; }
    .totals table{ width:70mm; border-collapse:collapse; }
    .totals td{ padding:6px 8px; border-left:1px solid var(--line); border-right:1px solid var(--line); }
    .totals tr:first-child td{ border-top:1px solid var(--line); }
    .totals tr:last-child  td{ border-bottom:1px solid var(--line); }
    .totals .label{ font-weight:700; background:#f6f6f6; }
    .totals .value{ text-align:right; }
  </style>
</head>
<body>

  <!-- Fondo -->
  <div class="bg-page"><img src="assets/emp3.png" alt="membrete"></div>

  <!-- Aire superior del membrete -->
  <div class="header-space"></div>

  <!-- Lugar + fecha -->
  <div class="fecha">{{lugar}}; a {{fecha}}</div>

  <!-- A quién va dirigido -->
  <div class="dest">{{destinatario}}</div>
  <div class="presente">{{presente}}</div>

  <!-- Intro SIN mover la tabla -->
  <div class="intro">
    <div><span class="label">Folio:</span> {{folio}}</div>
    <div><span class="label">Solicitud de cotización:</span> {{titulo}}</div>
    <div><span class="label">No. de conceptos:</span> {{items.length}}</div>
    <div><span class="label">Importe Total:</span> {{money totales.total}}</div>
  </div>

  <!-- Texto/introducción adicional -->
  <div class="intro">
    {{{descripcion}}}
  </div>

  <!-- ===== TABLA (No., Unidad de medida, Descripción, Cantidad, Precio unitario, Subtotal) ===== -->
  <div class="table-wrap">
    <table>
      <thead>
        <tr>
          <th class="center" style="width:16mm;">No.</th>
          <th class="center" style="width:26mm;">Unidad<br>de medida</th>
          <th>Descripción</th>
          <th class="center" style="width:22mm;">Cantidad</th>
          <th class="right"  style="width:30mm;">Precio unitario</th>
          <th class="right"  style="width:30mm;">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
          {{!-- Salta a nueva página justo antes del ítem 11 (index 10) --}}
          {{#if (eq @index 10)}}
            </tbody></table></div>
            <div class="pb-before"></div>
            <div class="table-wrap">
              <table>
                <thead>
                  <tr>
                    <th class="center" style="width:16mm;">No.</th>
                    <th class="center" style="width:26mm;">Unidad<br>de medida</th>
                    <th>Descripción</th>
                    <th class="center" style="width:22mm;">Cantidad</th>
                    <th class="right"  style="width:30mm;">Precio unitario</th>
                    <th class="right"  style="width:30mm;">Subtotal</th>
                  </tr>
                </thead>
                <tbody>
          {{/if}}

          <tr>
            <td class="center">{{inc @index}}</td>
            <td class="center">{{this.unidad}}</td>
            <td>{{this.nombre}}</td>
            <td class="center">{{this.cantidad}}</td>
            <td class="right">{{money this.unitario}}</td>
            <td class="right">{{money this.parcial}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Totales (no se parte) -->
  <div class="totals keep">
    <table>
      <tr><td class="label">Subtotal</td><td class="value">{{money totales.subtotal}}</td></tr>
      <tr><td class="label">IVA ({{ivaPct}}%)</td><td class="value">{{money totales.iva}}</td></tr>
      <tr><td class="label">Monto Total</td><td class="value">{{money totales.total}}</td></tr>
    </table>
  </div>

  <!-- Cantidad en letra -->
  <div style="margin:6px 15px 0; font-size:12px;">
    <span class="label">Cantidad con letra:</span> {{totalEnLetra}}
  </div>

  {{#if (or condiciones incluirFirma)}}
    <div class="pb-before"></div> <!-- nueva página -->

    {{#if condiciones}}
      <div style="margin:10px 15px 0;">
        <div class="label" style="margin-bottom:6px;">Condiciones generales</div>
        <div style="line-height:1.55; color:#222;">
          {{{condiciones}}}
        </div>
      </div>
    {{/if}}

    {{#if incluirFirma}}
      <div style="margin:30mm 15px 0; text-align:left;">
        <img src="{{firmaUrl}}" alt="firma" style="height:45px; display:block; margin-bottom:6px;">
      </div>
    {{/if}}
  {{/if}}

</body>
</html>
