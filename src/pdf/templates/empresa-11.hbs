<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{ --brand:#2c3e50; --ink:#111; --line:#bdc3c7; --thead: #93CEBC ; }

    @page { size: Letter; margin: 0 7mm 0; }
    
    /* Oswald */
    @font-face{
      font-family: "Oswald";
      src: url("assets/fonts/Oswald.ttf") format("truetype");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }

    @font-face{
      font-family: "Oswald";
      src: url("assets/fonts/Oswald-Bold.ttf") format("truetype");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }

    body{ 
      font-family: "Oswald", Arial, Helvetica, sans-serif;
      margin: 0;
      padding: 0;
      font-size: 12px;
    }

    .page-container {
      position: relative;
      min-height: 279.4mm;
      width: 215.9mm;
      page-break-after: always;
    }

    .page-container:last-child {
      page-break-after: auto;
    }

    /* ===== Fondo / membrete ===== */
    .bg-page { 
      position:absolute; 
      inset:0; 
      z-index:-1; 
      pointer-events:none; 
    }
    .bg-page img{
      width:100%; 
      height:100%;
      object-fit:cover;
      display:block;
    }

    .content-area {
      position: relative;
      padding-top: 10mm;
      min-height: calc(279.4mm - 10mm);
      display: flex;
      flex-direction: column;
    }

    /* Encabezado empresa 11 */
    .company-header {
      text-align: center;
      margin-bottom: 5mm;
    }
    
    .company-name {
      font-size: 28px;
      font-weight: bold;
      color: #2c3e50;
      margin-bottom: 3px;
      letter-spacing: 1.5px;
      text-transform: uppercase;
    }
    
    .company-subtitle {
      font-size: 14px;
      color: #7f8c8d;
      letter-spacing: 1px;
    }

    /* Dinámico */
    .fecha{ text-align:right; color:#333; margin:20px 5px 20px; font-weight:bold; }
    .dest{ font-weight:800; line-height:1.45; margin:12px 5px 0; }
    .presente{ font-weight:800; margin:10px 5px 0; }
    .intro{ margin:10px 5px 0; line-height:1.55; color:#222; }
    .label{ font-weight:400;}
    .folio{ font-weight:800; margin:50px 5px 0; text-align:center; } /* Cambiado a center */

    /* Contenedor de tabla */
    .table-wrap{ position:relative; margin:12px 5px 0; }

    /* ===== Tabla ===== */
    table { 
      width:100%; 
      border-collapse:collapse;
      border-left: none;
      border-right: none;
    }
    thead { display: table-header-group; }
    tr, td, th { page-break-inside: avoid; }

    thead th{
      color: #93CEBC; /* Color cambiado a #93CEBC */
      font-weight:700;
      border: 1px solid var(--line);
      border-top: 1px solid var(--line);
      border-bottom: 1px solid var(--line);
      padding:8px; 
      font-size:12px; 
      text-align:center; /* Centrado para los títulos */
      background: none; /* Sin fondo */
    }
    
    /* Eliminar primer borde izquierdo de la tabla */
    thead th:first-child {
      border-left: none;
    }
    
    /* Eliminar último borde derecho de la tabla */
    thead th:last-child {
      border-right: none;
    }
    
    tbody td{ 
      border:1px solid var(--line); 
      padding:6px 8px; 
      font-size:12px; 
      background:#fff; 
    }
    
    /* Eliminar primer borde izquierdo de las celdas del cuerpo */
    tbody td:first-child {
      border-left: none;
    }
    
    /* Eliminar último borde derecho de las celdas del cuerpo */
    tbody td:last-child {
      border-right: none;
    }
    
    .center{ text-align:center; } 
    .right{ text-align:right; }

    /* Totales a la derecha */
    .totals{ 
      display:flex; 
      justify-content:flex-end; 
      margin:10px 5px 0; 
    }
    .totals table{ 
      width:70mm; 
      border-collapse:collapse;
      border-left: none;
      border-right: none;
    }
    .totals td{ 
      padding:6px 8px; 
      border-left:1px solid var(--line); 
      border-right:1px solid var(--line); 
    }
    .totals tr:first-child td{ 
      border-top:1px solid var(--line); 
    }
    .totals tr:last-child  td{ 
      border-bottom:1px solid var(--line); 
    }
    .totals .label{ 
      font-weight:700; 
      background:none; /* Sin fondo azul */
      color: #93CEBC; /* Color cambiado a #93CEBC */
    }
    .totals .value{ 
      text-align:right; 
    }

    /* ===== Firma ===== */
    .firma{
      margin: 12mm 0 0;
      text-align: right; /* Cambiado a right (derecha) */
    }

    .firma-content {
      text-align: right;
      margin-left: auto;
      width: fit-content;
      max-width: 80%;
    }

    .firma img{
      height: 95px;
      display: block;
      margin: auto;
      margin-bottom: 8px;
    }

    .footer-section {
      margin-top: auto;
      padding-bottom: 15mm;
    }

    .important-content {
      page-break-inside: avoid;
      break-inside: avoid;
    }

    /* Información de contacto */
    .contact-info {
      margin: 8mm 5px 0;
      font-size: 11px;
      color: #333;
      line-height: 1.4;
      text-align: center;
    }
  </style>
</head>
<body>

<!-- PÁGINAS CON PAGINACIÓN INTELIGENTE -->
{{#if items}}
  {{#each (smartChunk items)}}
  <div class="page-container">
    <div class="bg-page"><img src="assets/emp11.png" alt="membrete"></div>
    <div class="content-area">

      <!-- ENCABEZADO SOLO EN PRIMERA PÁGINA -->
      {{#if (eq @index 0)}}
      
      <div class="folio">{{../folio}}</div>
      <div class="fecha">{{../lugar}}, a {{../fecha}}</div>
      <div class="dest">{{../destinatario}}</div>
      <div class="presente">{{../presente}}</div>

      <div class="intro" style="margin-top:10px;">
        {{{../descripcion}}}
      </div>
      {{/if}}

      <!-- EN PÁGINAS SUBSECUENTES, LA TABLA COMIENZA MÁS ARRIBA -->
      {{#if (gt @index 0)}}
      <div style="margin-top: 100px;"></div> <!-- Espacio similar a donde va la fecha en primera página -->
      {{/if}}

      <!-- TABLA DE ITEMS -->
      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th class="center" style="width:16mm;">Número</th>
              <th class="center">Concepto</th>
              <th class="center" style="width:22mm;">Cantidad</th>
              <th class="center" style="width:22mm;">Unidad</th>
              <th class="center" style="width:30mm;">Precio Unitario</th>
              <th class="center" style="width:30mm;">Subtotal</th>
            </tr>
          </thead>
          <tbody>
            {{#each this}}
            <tr>
              <td class="center">{{this.globalIndex}}</td>
              <td>{{this.nombre}}</td>
              <td class="center">{{this.cantidad}}</td>
              <td class="center">{{this.unidad}}</td>
              <td class="right">{{money this.unitario}}</td>
              <td class="right">{{money this.parcial}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      <!-- SECCIÓN IMPORTANTE SOLO EN ÚLTIMA PÁGINA SI HAY ESPACIO -->
      {{#if @last}}
        {{#if (not (needsSeparateImportantPage ../items))}}
        <div class="important-content" style="margin-top: 12px;">
          <!-- Totales -->
          <div class="totals">
            <table>
              <tr><td class="label">IVA</td><td class="value">{{money ../totales.iva}}</td></tr>
              <tr><td class="label">Total</td><td class="value">{{money ../totales.total}}</td></tr>
            </table>
          </div>

          <!-- Cantidad en letra -->
          <div style="margin:6px 5px 0; font-size:12px;">
            <span class="label" style="font-weight:bold;">MONTO TOTAL EN LETRA: {{../totalEnLetra}}</span> 
          </div>

          <!-- Condiciones -->
          {{#if ../condiciones}}
          <div style="margin:10px 5px 0;">
            <div class="label" style="margin-bottom:6px; font-weight: bold;">Condiciones:</div>
            <div style="line-height:1.55; color:#222;">
              {{{../condiciones}}}
            </div>
          </div>
          {{/if}}

          <!-- Firma -->
          <div class="firma">
            <div class="firma-content">
              <span style="font-weight:600; display:block; margin-bottom:8px;">A T E N T A M E N T E</span>
              {{#if ../incluirFirma}}
                {{#if ../firmaUrl}}<img src="{{../firmaUrl}}" alt="firma">{{/if}}
              {{else}}
                <!-- Espacio reservado para la firma cuando no hay imagen -->
                <div style="height:95px; margin-bottom:8px; width: 200px; margin-left: auto;"></div>
              {{/if}}
              <div style="font-weight:600; margin-top:10px;">
                {{#if ../firmanteNombre}}{{{../firmanteNombre}}}{{else}}Lic. Sonia Sánchez Vizuet{{/if}}
              </div>
              {{#if ../firmantePuesto}}
                <div style="margin-top: 4px;">{{../firmantePuesto}}</div>
              {{/if}}
            </div>
          </div>

          <!-- Información de contacto -->
          <div class="contact-info">
            {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
            {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
            {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
            {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
          </div>
        </div>
        {{else}}
        <!-- Info de contacto si no cabe la sección importante -->
        <div class="contact-info" style="margin-top: 20px;">
          {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
          {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
          {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
          {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
        </div>
        {{/if}}
      {{else}}
        <!-- Información de contacto en páginas intermedias -->
        <div class="contact-info" style="margin-top: 20px;">
          {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
          {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
          {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
          {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
        </div>
      {{/if}}
    </div>
  </div>
  {{/each}}

  <!-- PÁGINA SEPARADA PARA INFORMACIÓN IMPORTANTE SI NO CABE EN LA ÚLTIMA -->
  {{#if (needsSeparateImportantPage items)}}
  <div class="page-container">
    <div class="bg-page"><img src="assets/emp11.png" alt="membrete"></div>
    <div class="content-area">
      
      <!-- Espacio desde arriba similar a la fecha -->
      <div style="margin-top: 70px;"></div>
      
      <div class="important-content">
        <!-- Totales -->
        <div class="totals">
          <table>
            <tr><td class="label">IVA</td><td class="value">{{money totales.iva}}</td></tr>
            <tr><td class="label">Total</td><td class="value">{{money totales.total}}</td></tr>
          </table>
        </div>

        <!-- Cantidad en letra -->
        <div style="margin:6px 5px 0; font-size:12px;">
          <span class="label" style="font-weight:bold;">MONTO TOTAL EN LETRA: {{totalEnLetra}}</span> 
        </div>

        <!-- Condiciones -->
        {{#if condiciones}}
        <div style="margin:10px 5px 0;">
          <div class="label" style="margin-bottom:6px; font-weight: bold;">Condiciones:</div>
          <div style="line-height:1.55; color:#222;">
            {{{condiciones}}}
          </div>
        </div>
        {{/if}}

        <!-- Firma -->
        <div class="firma">
          <div class="firma-content">
            <span style="font-weight:600; display:block; margin-bottom:8px;">A T E N T A M E N T E</span>
            {{#if incluirFirma}}
              {{#if firmaUrl}}<img src="{{firmaUrl}}" alt="firma">{{/if}}
            {{else}}
              <!-- Espacio reservado para la firma cuando no hay imagen -->
              <div style="height:95px; margin-bottom:8px; width: 200px; margin-left: auto;"></div>
            {{/if}}
            <div style="font-weight:600; margin-top:10px;">
              {{#if firmanteNombre}}{{{firmanteNombre}}}{{else}}Lic. Sonia Sánchez Vizuet{{/if}}
            </div>
            {{#if firmantePuesto}}
              <div style="margin-top: 4px;">{{firmantePuesto}}</div>
            {{/if}}
          </div>
        </div>

        <!-- Información de contacto -->
        <div class="contact-info">
          {{#if contactoTelefono}}{{contactoTelefono}}<br>{{/if}}
          {{#if contactoEmail}}{{contactoEmail}}<br>{{/if}}
          {{#if contactoDireccion}}{{contactoDireccion}}<br>{{/if}}
          {{#if contactoCiudad}}{{contactoCiudad}}{{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/if}}
{{else}}
  <!-- PÁGINA VACÍA SI NO HAY ITEMS -->
  <div class="page-container">
    <div class="bg-page"><img src="assets/emp11.png" alt="membrete"></div>
    <div class="content-area">
      <div class="company-header">
        <div class="company-name">GRUPO ÁLAMO ALTO</div>
        <div class="company-subtitle">S.A de C.V</div>
      </div>
      <div style="text-align: center; margin-top: 100px;">
        <h3>No hay items en esta cotización</h3>
      </div>
    </div>
  </div>
{{/if}}
</body>
</html>