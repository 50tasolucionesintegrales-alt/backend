<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{
      --ink:#111;
      --line:#aca4cb;      /* bordes lilas suaves */
      --thead:#f0ecfb;     /* encabezado clarito */
    }

    @page { size: Letter; margin: 0; }

    /* Lato: usa SOLO estos dos archivos */
    @font-face{
      font-family: "LatoLocal";
      src: url("assets/fonts/Lato-Regular.ttf") format("truetype");
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face{
      font-family: "LatoLocal";
      src: url("assets/fonts/Lato-Bold.ttf") format("truetype");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
    body{ 
      font-family: "LatoLocal", Arial, Helvetica, sans-serif; 
      font-size:14px; 
      color:var(--ink);
      margin: 0;
      padding: 0;
    }

    .page-container {
      position: relative;
      min-height: 279.4mm;
      width: 215.9mm;
      page-break-after: always;
    }

    .page-container:last-child {
      page-break-after: auto;
    }

    /* Fondo con líneas y logotipo grandes */
    .bg-page{ position:absolute; inset:0; z-index:-1; pointer-events:none; }
    .bg-page img{ width:100%; height:100%; object-fit:cover; display:block; }

    .content-area {
      position: relative;
      padding-top: 10mm;
      min-height: calc(279.4mm - 10mm);
      display: flex;
      flex-direction: column;
    }

    /* Fecha der., título centrado, destinatario izq. */
    .fecha{ text-align:right; color:#333; margin: 4mm 83px 2mm 20px; }
    .title{ text-align:center; font-weight:700; margin: 7mm 20px 10mm; font-size: 14px; }
    .dest{ font-weight:700; line-height:1.45; margin: 0 83px 0 20px; }
    .presente{ font-weight:700; margin: 2px 83px 10px 20px; }

    /* Firma SOLO imagen, a la derecha (bloque indivisible) */
    .sig-row{
      display:grid;
      grid-template-columns: 1fr 220px;
      align-items:start;
      gap: 10px;
      margin: 0 83px 10px 20px;
      page-break-inside: avoid; break-inside: avoid;
    }
    .sig-box{ text-align:right; }
    .sig-box img{ height:100px; display:block; margin: 0 0 0 0px; }

    /* Resumen (requisición/totales/en letra) a la izquierda */
    .summary{ margin: 6px 83px 6px 20px; line-height:1.55; color:#222; font-size:13px; }
    .label{ font-weight:700; }

    /* Tabla */
    .table-wrap{ position:relative; margin: 8px 83px 0 20px; }
    table{ width:100%; border-collapse:collapse; page-break-inside:auto; }
    thead{ display: table-header-group; }
    tr, td, th{ page-break-inside:avoid; break-inside:avoid; }
    thead th{
      background: var(--thead);
      color:#2a2740;
      font-weight:700;
      border:1px solid var(--line);
      padding:8px; font-size:12px; text-align:left;
    }
    tbody td{
      border:1px solid var(--line);
      padding:6px 8px; font-size:12px; background:#fff; vertical-align:top;
    }
    .center{ text-align:center; } .right{ text-align:right; }

    /* Totales (derecha) */
    .totals{ display:flex; justify-content:flex-end; margin: 10px 83px 0 20px; }
    .totals table{ width:70mm; border-collapse:collapse; }
    .totals td{
      padding:6px 8px;
      border-left:1px solid var(--line); border-right:1px solid var(--line);
      background:#fff;
    }
    .totals tr:first-child td{ border-top:1px solid var(--line); }
    .totals tr:last-child  td{ border-bottom:1px solid var(--line); }
    .totals .label{ font-weight:700; }
    .totals .value{ text-align:right; }

    /* Términos (abajo izquierda) */
    .terms{ margin: 14mm 83px 0 20px; max-width: 125mm; font-size:13px; }
    .terms .t-title{ font-weight:700; margin-bottom:6px; }
    .terms ul{ margin: 6px 0 0 18px; line-height:1.6; }

    /* Folio en el footer */
    .footer{ margin: 10px 20px; font-size:12px; }

    /* Información de contacto */
    .contact-info {
      margin: 8mm 20px 0;
      font-size: 11px;
      color: #333;
      line-height: 1.4;
    }
  </style>
</head>
<body>

<!-- PÁGINAS CON PAGINACIÓN INTELIGENTE -->
{{#each (smartChunk items)}}
<div class="page-container">
  <div class="bg-page"><img src="assets/emp6.png" alt="membrete"></div>
  <div class="content-area">

    <!-- ENCABEZADO SOLO EN PRIMERA PÁGINA -->
    {{#if (eq @index 0)}}
    <!-- Cabecera -->
    <div class="fecha">{{../lugar}}, a {{../fecha}}</div>
    <div class="title">Solicitud de Cotización</div>

    <!-- Destinatario -->
    <div class="dest">{{../destinatario}}</div>
    <div class="presente">{{../presente}}</div>
    {{/if}}

    <!-- EN PÁGINAS SUBSECUENTES, LA TABLA COMIENZA MÁS ARRIBA -->
    {{#if (gt @index 0)}}
    <div style="margin-top: 100px;"></div>
    {{/if}}

    <!-- TABLA DE ITEMS -->
    <div class="table-wrap">
      <table>
        <thead>
          <tr>
            <th class="center" style="width:16mm;">No.</th>
            <th>Especificaciones</th>
            <th class="center" style="width:22mm;">Cantidad</th>
            <th class="right" style="width:30mm;">Precio unitario</th>
            <th class="right" style="width:30mm;">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          {{#each this}}
          <tr>
            <td class="center">{{this.globalIndex}}</td>
            <td>{{this.nombre}}</td>
            <td class="center">{{this.cantidad}}</td>
            <td class="right">{{money this.unitario}}</td>
            <td class="right">{{money this.parcial}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <!-- SECCIÓN IMPORTANTE SOLO EN ÚLTIMA PÁGINA SI HAY ESPACIO -->
    {{#if @last}}
      {{#if (not (needsSeparateImportantPage ../items))}}
      <div style="margin-top: 12px;">

        <!-- Totales -->
        <div class="totals">
          <table>
            <tr><td class="label">Subtotal</td><td class="value">{{money ../totales.subtotal}}</td></tr>
            <tr><td class="label">IVA ({{../ivaPct}}%)</td><td class="value">{{money ../totales.iva}}</td></tr>
            <tr><td class="label">Total</td><td class="value">{{money ../totales.total}}</td></tr>
          </table>
        </div>

        <!-- Resumen -->
        <div class="summary">
          {{#if ../titulo}}<div><span class="label">Requisición:</span> {{../titulo}}</div>{{/if}}
          <div><span class="label">Subtotal:</span> {{money ../totales.subtotal}}</div>
          <div><span class="label">Total:</span> {{money ../totales.total}}</div>
          <div><span class="label">Total en letra:</span> {{../totalEnLetra}}</div>
        </div>

        <!-- Texto de cortesía -->
        <div class="summary" style="margin-top:8px;">
          Un cordial saludo, le envío la cotización que se me requirió con anterioridad.
        </div>



        <!-- Términos -->
        {{#if ../condiciones}}
        <div class="terms">
          <div class="t-title">Términos:</div>
          <div class="content">
            {{{../condiciones}}}
          </div>
        </div>
        {{/if}}

                <!-- Firma (alineación derecha, respetando la estructura original del formato) -->
        <div class="sig-row">
          <div></div>
          <div class="sig-box" style="text-align:right;">
            <span style="font-weight:700; display:block; margin-bottom:6px; padding-right:30px;">Atentamente</span>
            {{#if ../incluirFirma}}
              {{#if ../firmaUrl}}<img src="{{../firmaUrl}}" alt="firma" style="height:100px; display:inline-block; margin-bottom:6px;">{{/if}}
            {{else}}
              <!-- Espacio reservado para la firma cuando no hay imagen -->
              <div style="height:100px; margin-left:18px; margin-bottom:8px;"></div>
            {{/if}}
            <div style="font-weight:700; padding-right:25px;">
              {{#if ../firmanteNombre}}{{{../firmanteNombre}}}{{else}}Responsable de Ventas{{/if}}
            </div>
          </div>
        </div>

        <!-- Información de contacto -->
        <div class="contact-info">
          {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
          {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
          {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
          {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
        </div>
      </div>
      {{else}}
      <!-- Info de contacto si no cabe la sección importante -->
      <div class="contact-info" style="margin-top: 20px;">
        {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
        {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
        {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
        {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
      </div>
      {{/if}}
    {{else}}
      <!-- Info de contacto en páginas intermedias -->
      <div class="contact-info" style="margin-top: 20px;">
        {{#if ../contactoTelefono}}{{../contactoTelefono}}<br>{{/if}}
        {{#if ../contactoEmail}}{{../contactoEmail}}<br>{{/if}}
        {{#if ../contactoDireccion}}{{../contactoDireccion}}<br>{{/if}}
        {{#if ../contactoCiudad}}{{../contactoCiudad}}{{/if}}
      </div>
    {{/if}}

    <!-- Folio en el footer -->
    <div class="footer">
      <div class="folio">{{../folio}}</div>
    </div>
  </div>
</div>
{{/each}}

<!-- PÁGINA SEPARADA PARA INFORMACIÓN IMPORTANTE SI NO CABE EN LA ÚLTIMA -->
{{#if (needsSeparateImportantPage items)}}
<div class="page-container">
  <div class="bg-page"><img src="assets/emp6.png" alt="mambrete"></div>
  <div class="content-area">
    
    <!-- Espacio desde arriba -->
    <div style="margin-top: 20px;"></div>

          <!-- Totales -->
      <div class="totals">
        <table>
          <tr><td class="label">Subtotal</td><td class="value">{{money totales.subtotal}}</td></tr>
          <tr><td class="label">IVA ({{ivaPct}}%)</td><td class="value">{{money totales.iva}}</td></tr>
          <tr><td class="label">Total</td><td class="value">{{money totales.total}}</td></tr>
        </table>
      </div>
    
      <!-- Resumen -->
      <div class="summary">
        {{#if titulo}}<div><span class="label">Requisición:</span> {{titulo}}</div>{{/if}}
        <div><span class="label">Subtotal:</span> {{money totales.subtotal}}</div>
        <div><span class="label">Total:</span> {{money totales.total}}</div>
        <div><span class="label">Total en letra:</span> {{totalEnLetra}}</div>
      </div>
    
      <!-- Texto de cortesía -->
      <div class="summary" style="margin-top:8px;">
        Un cordial saludo, le envío la cotización que se me requirió con anterioridad.
      </div>


      <!-- Términos -->
      {{#if condiciones}}
      <div class="terms">
        <div class="t-title">Términos:</div>
        <div class="content">
          {{{condiciones}}}
        </div>
      </div>
      {{/if}}

          <div style="margin-top: 12px;">
      <!-- Firma (alineación derecha, respetando la estructura original del formato) -->
      <div class="sig-row">
        <div></div>
        <div class="sig-box" style="text-align:right;">
          <span style="font-weight:700; display:block; margin-bottom:6px; padding-right:30px;">Atentamente</span>
          {{#if incluirFirma}}
            {{#if firmaUrl}}<img src="{{firmaUrl}}" alt="firma" style="height:100px; display:inline-block; margin-bottom:6px;">{{/if}}
          {{else}}
            <!-- Espacio reservado para la firma cuando no hay imagen -->
            <div style="height:100px; margin-left:18px; margin-bottom:8px;"></div>
          {{/if}}
          <div style="font-weight:700; padding-right:25px;">
            {{#if firmanteNombre}}{{{firmanteNombre}}}{{else}}Responsable de Ventas{{/if}}
          </div>
        </div>
      </div>

      <!-- Información de contacto -->
      <div class="contact-info">
        {{#if contactoTelefono}}{{contactoTelefono}}<br>{{/if}}
        {{#if contactoEmail}}{{contactoEmail}}<br>{{/if}}
        {{#if contactoDireccion}}{{contactoDireccion}}<br>{{/if}}
        {{#if contactoCiudad}}{{contactoCiudad}}{{/if}}
      </div>
    </div>
  </div>
</div>
{{/if}}
</body>
</html>