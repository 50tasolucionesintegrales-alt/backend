<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{titulo}}</title>
  <style>
    :root{
      --brand:#245fa7;   /* azul del formato */
      --ink:#111;
      --line:#cfd7e3;
      --thead:#245fa7;   /* encabezado de la tabla */
      --theadText:#ffffff;
    }

    /* Igual que en los otros formatos */
    @page { size: Letter; margin: 0 0 0; }
    body  { font-family: Arial, Helvetica, sans-serif; font-size:12px; color:var(--ink); }

    /* ===== Fondo / membrete ===== */
    .bg-page{ position:fixed; inset:0; z-index:-1; pointer-events:none; }
    .bg-page img{
      position:absolute; top:0; left:0;
      width:100%; height:100%;
      object-fit:cover; display:block;
    }

    /* Aire superior del membrete */
    .header-space{ height:36mm; } /* si te come el logo, sube a 38–40 */

    /* Cabecera dinámica */
    .fecha{ text-align:right; color:#333; margin:10px 55px 18px; }
    .dest{ font-weight:700; line-height:1.45; margin:0 55px; }
    .presente{ font-weight:800; margin:6px 55px 0; }
    .intro{ margin:12px 55px 0; line-height:1.55; color:#222; }
    .label{ font-weight:700; }

    /* Contenedor de tabla */
    .table-wrap{ position:relative; margin:12px 40px 0; }

    /* ===== Paginación ===== */
    table { width:100%; border-collapse:collapse; page-break-inside:auto; }
    thead { display: table-header-group; }
    tr, td, th { page-break-inside: avoid; break-inside: avoid; }
    .keep{ page-break-inside: avoid; break-inside: avoid; }
    .pb-before{ page-break-before: always; break-before: page; }

    /* Encabezado tipo original (franja azul) */
    thead th{
      background:var(--thead);
      color:var(--theadText);
      font-weight:700;
      border:1px solid var(--thead);
      padding:8px; font-size:12px; text-align:left;
    }

    /* Celdas */
    tbody td{
      border:1px solid var(--line);
      padding:6px 8px; font-size:12px; background:#fff; vertical-align:top;
    }
    .center{ text-align:center; }
    .right { text-align:right;  }

    /* Totales (caja a la derecha) */
    .totals{ display:flex; justify-content:flex-end; margin:10px 40px 0; }
    .totals table{ width:70mm; border-collapse:collapse; }
    .totals td{ padding:6px 8px; border-left:1px solid var(--line); border-right:1px solid var(--line); }
    .totals tr:first-child td{ border-top:1px solid var(--line); }
    .totals tr:last-child  td{ border-bottom:1px solid var(--line); }
    .totals .label{ font-weight:700; background:#f2f5fa; }
    .totals .value{ text-align:right; }
  </style>
</head>
<body>

  <!-- Fondo -->
  <div class="bg-page"><img src="assets/emp4.png" alt="membrete"></div>

  <!-- Zona libre para el logo del membrete -->
  <div class="header-space"></div>

  <!-- Lugar + Fecha (derecha) -->
  <div class="fecha">{{lugar}}; a {{fecha}}</div>

  <!-- A quién va dirigido -->
  <div class="dest">{{destinatario}}</div>
  <div class="presente">{{presente}}</div>

  <!-- Intro SIN mover la tabla -->
  <div class="intro">
    <div><span class="label">Folio:</span> {{folio}}</div>
    <div><span class="label">Solicitud de cotización:</span> {{titulo}}</div>
    <div><span class="label">No. de conceptos:</span> {{items.length}}</div>
    <div><span class="label">Importe Total:</span> {{money totales.total}}</div>
  </div>

  <!-- Descripción -->
  <div class="intro">{{{descripcion}}}</div>

  <!-- ===== TABLA ===== -->
  <div class="table-wrap">
    <table>
      <thead>
        <tr>
          <th class="center" style="width:16mm;">ITEM</th>
          <th class="center" style="width:22mm;">UNIDAD</th>
          <th class="center" style="width:22mm;">CANTIDAD</th>
          <th>DESCRIPCIÓN</th>
          <th class="right"  style="width:30mm;">UNITARIO</th>
          <th class="right  " style="width:30mm;">SUBTOTAL</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
          {{!-- Salta a nueva página antes del #11 (index 10) --}}
          {{#if (eq @index 10)}}
            </tbody></table></div>
            <div class="pb-before"></div>
            <div class="table-wrap">
              <table>
                <thead>
                  <tr>
                    <th class="center" style="width:16mm;">ITEM</th>
                    <th class="center" style="width:22mm;">UNIDAD</th>
                    <th class="center" style="width:22mm;">CANTIDAD</th>
                    <th>DESCRIPCIÓN</th>
                    <th class="right"  style="width:30mm;">UNITARIO</th>
                    <th class="right  " style="width:30mm;">SUBTOTAL</th>
                  </tr>
                </thead>
                <tbody>
          {{/if}}

          <tr>
            <td class="center">{{inc @index}}</td>
            <td class="center">{{this.unidad}}</td>
            <td class="center">{{this.cantidad}}</td>
            <td>{{this.nombre}}</td>
            <td class="right">{{money this.unitario}}</td>
            <td class="right">{{money this.parcial}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Totales -->
  <div class="totals keep">
    <table>
      <tr><td class="label">SUBTOTAL</td><td class="value">{{money totales.subtotal}}</td></tr>
      <tr><td class="label">IVA ({{ivaPct}}%)</td><td class="value">{{money totales.iva}}</td></tr>
      <tr><td class="label">TOTAL</td><td class="value">{{money totales.total}}</td></tr>
    </table>
  </div>

  <!-- Cantidad en letra -->
  <div class="intro" style="margin-top:6px;">
    <span class="label">Cantidad con letra:</span> {{totalEnLetra}}
  </div>

  {{#if (or condiciones incluirFirma)}}
    <div class="pb-before"></div> <!-- nueva página para no mover el layout principal -->

    {{#if condiciones}}
      <div class="intro" style="margin-top:10px;">
        <div class="label" style="margin-bottom:6px;">Condiciones generales</div>
        <div style="line-height:1.55; color:#222;">
          {{{condiciones}}}
        </div>
      </div>
    {{/if}}

    {{#if incluirFirma}}
      <div style="margin:30mm 55px 0; text-align:left;">
        <img src="{{firmaUrl}}" alt="firma" style="height:45px; display:block; margin-bottom:6px;">
      </div>
    {{/if}}
  {{/if}}

</body>
</html>
